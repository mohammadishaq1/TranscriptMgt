@model IEnumerable<DataAccess.StudentTable>

@{
    ViewBag.Title = "All Student";
}


<div class="card">
    <div class="card-header py-3">
        @Html.ActionLink("New Student", "Create", null, new { @class = "genric-btn success" })
        <input type="text" id="txtsearch" name="txtsearch" class="form-control col-md-2" style="float:right" placeholder="Search" />
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Registration Number
                        </th>
                        <th>
                            Enrollment Number
                        </th>
                        <th>
                            Department
                        </th>
                        <th>
                            Program
                        </th>
                        <th>
                           Session
                        </th>
                        <th>
                            Date of Birth
                        </th>
                        <th>
                            Photo
                        </th>

                        <th>
                            Date of Admission
                        </th>

                        <th>
                            Address
                        </th>

                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody id="searchvalue">
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Reg_No)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Enroll_No)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartmentTable.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProgrammeTable.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SessionTable.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dob)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Photo)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Data_of_Addmission)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>


                        <td>
                            @Html.ActionLink("Update", "Edit", new { id = item.StudentID }, new { @class = "genric-btn primary" }) 
                            @Html.ActionLink("Profile", "Details", new { id = item.StudentID }, new { @class = "genric-btn info" })
                           
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#txtsearch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
